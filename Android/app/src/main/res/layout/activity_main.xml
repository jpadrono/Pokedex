            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:src="@drawable/logo" />

